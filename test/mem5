import AVFoundation

let audioFormatDescription = CMFormatDescriptionCreate(nil, kCMMediaType_Audio, kAudioFormatMPEG4AAC, nil)
let audioCodec = CMFormatDescriptionGetMediaSubType(audioFormatDescription)

let subtypeString = String(format: "%c%c%c%c",
                           Int((audioCodec >> 24) & 0xFF),
                           Int((audioCodec >> 16) & 0xFF),
                           Int((audioCodec >> 8) & 0xFF),
                           Int(audioCodec & 0xFF))

print(subtypeString) // Output: "aac "
